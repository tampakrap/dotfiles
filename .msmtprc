defaults
tls on
tls_certcheck on
tls_trust_file /usr/local/etc/openssl/cert.pem
auth on
logfile ~/.log/fetch_send_mail.log

account gmail
host smtp.gmail.com
port 587
from tampakrap@gmail.com
user tampakrap
passwordeval "echo -n $(pass forkbomb.gr/$HOSTNAME/mutt/google) | cut -d' ' -f1"

account seznam
host smtp.seznam.cz
port 587
from tampakrap@seznam.cz
user tampakrap@seznam.cz
passwordeval "echo -n $(pass sites/seznam.cz) | cut -d' ' -f1"

account uplus
host smtp.gmail.com
port 587
from chatzimichos@usertechnologies.com
user chatzimichos@usertechnologies.com
passwordeval "echo -n $(pass uplus/google.com) | cut -d' ' -f1"

