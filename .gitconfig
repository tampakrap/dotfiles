[user]
	name = Theo Chatzimichos
	email = tampakrap@gmail.com
	signingkey = 0xC9DA5BE037C3164C
[color]
	ui = true
[push]
	default = simple
[alias]
	st = status
	l = log --graph --format='%C(magenta)%h%Creset -%C(red)%d%Creset %s %C(green)(%ar) %C(bold blue)<%an>%Creset'
	lb = log --graph --format='%C(magenta)%h%Creset -%C(red)%d%Creset %s %C(green)(%ad) %C(bold blue)%an <%ae>%Creset %n %b'
	cb = branch --show-current
	nb = "!f() { git show-ref --quiet refs/heads/master && BRANCH=master || BRANCH=main; git switch -c $1 origin/$BRANCH --no-track; }; f"
	sw = switch
	swm = "!f() { git show-ref --quiet refs/heads/master && BRANCH=master || BRANCH=main; git switch $BRANCH; }; f"
[core]
	excludesfile = ~/.gitignore_global
[commit]
	gpgsign = true
[url "https://github.com"]
	insteadOf = git://github.com
[includeIf "gitdir:~/Repos/github.com/jobandtalent/"]
	path = ~/.gitconfig_jobandtalent
[includeIf "gitdir:~/Repos/github.com/jobandtalent-experimental/"]
	path = ~/.gitconfig_jobandtalent
